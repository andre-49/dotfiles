alias update="sudo pacman -Syu"
alias remove="sudo pacman -Rns"
alias add="sudo pacman -S"
alias s="sudo"

alias ff="fastfetch"
alias v="nvim"
alias V="nvim ."
alias vs="sudo nvim"
alias y="yazi"
alias vim="sudo vim"
